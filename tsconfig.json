{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "noImplicitAny": false,
    "lib": [
      "es6",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext",
      "esnext.asynciterable"
    ],
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "outDir": "./build",
    "pretty": true,
    "target": "es2017",
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": false
  },
  "include": [
    "types/**/*.ts",
    "app/**/*",
    "index.ts",
  ],
  "exclude": [
    "build",
    "types",
    "node_modules",
    "**/*.spec.ts",
    "test",
  ]
}
